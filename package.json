{
  "name": "js-yaml-type-ts",
  "version": "1.2.3",
  "description": "Custom type for js-yaml to include Typescript modules",
  "main": "build/src/index.js",
  "types": "build/src/index.d.ts",
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "tsc",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jaulz/js-yaml-type-ts.git"
  },
  "keywords": [
    "js-yaml",
    "type",
    "typescript",
    "module"
  ],
  "author": "jaulz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jaulz/js-yaml-type-ts/issues"
  },
  "homepage": "https://github.com/jaulz/js-yaml-type-ts#readme",
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/js-yaml": "^3.12.1",
    "@types/node": "^11.13.7",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^2.1.0",
    "jest": "^24.7.1",
    "prettier": "^1.17.0",
    "pretty-quick": "^1.10.0",
    "ts-jest": "^24.0.2"
  },
  "dependencies": {
    "js-yaml": "^3.13.1",
    "typescript": "^3",
    "vm2": "^3.8.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": false
  },
  "husky": {
    "hooks": {
      "post-merge": "yarn install",
      "post-rewrite": "yarn install",
      "pre-commit": "pretty-quick --staged --verbose"
    }
  }
}
